{
  "name": "liverty-studio",
  "description": "Live streaming software for Virtual Liver that only needs VRM",
  "version": "0.0.1",
  "private": true,
  "author": "Tadao Iseki <saitoeku3@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/saitoeku3/liverty-stadio.git"
  },
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf ./dist && npm-run-all build:*",
    "build:main": "rimraf ./dist/main.js && webpack --config ./webpack/webpack.config.main.ts",
    "build:renderer": "webpack --config ./webpack/webpack.config.renderer.ts",
    "dev": "run-p dev:*",
    "dev:renderer": "webpack-dev-server --port 8080 --config ./webpack/webpack.config.renderer.ts --hot",
    "dev:main": "npm run build:main && electron ./dist/main.js",
    "format": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "pack": "cross-env NODE_ENV=production npm run build && run-p pack:*",
    "pack:mac": "ts-node scripts/build-for-mac.ts",
    "pack:win": "ts-node scripts/build-for-win.ts",
    "test": "jest --config jest.config.json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@hot-loader/react-dom": "^16.13.0",
    "@pixiv/three-vrm": "^0.3.6",
    "facefilter": "^1.3.1",
    "image-size": "^0.9.1",
    "konva": "^7.1.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-konva": "^16.13.0-6",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-three-fiber": "4.2.21",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.0",
    "three": "^0.118.3",
    "use-image": "^1.0.6",
    "uuid": "^8.3.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/dom-mediacapture-record": "^1.0.7",
    "@types/electron-load-devtool": "^1.2.0",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/server-destroy": "^1.0.0",
    "@types/styled-components": "^5.1.3",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.22",
    "@types/webpack-merge": "^4.1.5",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "bplist": "0.0.4",
    "cross-env": "^7.0.2",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.0",
    "electron-load-devtool": "^1.2.0",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "html-loader": "^1.3.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "redux-devtools": "^3.7.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format"
    ]
  }
}
