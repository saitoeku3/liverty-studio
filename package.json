{
  "name": "liverty-studio",
  "description": "Live streaming software for Virtual Liver that only needs VRM",
  "version": "0.0.1",
  "private": true,
  "author": "Tadao Iseki <saitoeku3@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/saitoeku3/liverty-stadio.git"
  },
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf ./dist && npm-run-all build:*",
    "build:main": "rimraf ./dist/main.js && webpack --config ./webpack/webpack.config.main.ts",
    "build:renderer": "webpack --config ./webpack/webpack.config.renderer.ts",
    "dev": "run-p dev:*",
    "dev:renderer": "webpack-dev-server --port 8080 --config ./webpack/webpack.config.renderer.ts --hot",
    "dev:main": "npm run build:main && electron ./dist/main.js",
    "format": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "pack": "cross-env NODE_ENV=production npm run build && run-p pack:*",
    "pack:mac": "ts-node scripts/build-for-mac.ts",
    "pack:win": "ts-node scripts/build-for-win.ts",
    "test": "jest --config jest.config.json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@hot-loader/react-dom": "^16.11.0",
    "@pixiv/three-vrm": "^0.2.0",
    "facefilter": "^1.1.4",
    "image-size": "^0.8.3",
    "konva": "^4.1.5",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-hot-loader": "^4.12.19",
    "react-konva": "^16.10.1-0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-three-fiber": "3.0.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.0.1",
    "three": "0.108.0",
    "use-image": "^1.0.5",
    "uuid": "^3.4.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@types/dom-mediacapture-record": "^1.0.3",
    "@types/electron-load-devtool": "^1.2.0",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/server-destroy": "^1.0.0",
    "@types/styled-components": "^5.0.0",
    "@types/uuid": "^3.4.7",
    "@types/webpack": "^4.41.6",
    "@types/webpack-merge": "^4.1.5",
    "@types/ws": "^7.2.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "bplist": "0.0.4",
    "cross-env": "^7.0.0",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2",
    "electron-load-devtool": "^1.2.0",
    "electron-notarize": "^0.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.0",
    "redux-devtools": "^3.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "git add"
    ]
  }
}
