{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": { "*": ["types/*"] },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*", "types"]
}
