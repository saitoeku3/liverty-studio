{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": { "*": ["src/types/*"] },
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
